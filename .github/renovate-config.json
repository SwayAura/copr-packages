{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "onboarding": false,
    "requireConfig": "ignored",
    "platform": "github",
    "repositories": [
        "SwayAura/copr-packages"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 5,
    "semanticCommits": "enabled",
    "enabledManagers": [
        "regex"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^.*\\.spec$"
            ],
            "matchStrings": [
                "%global gitrelease\\s(?<currentValue>.*)",
                "(?<=URL:\\s+https:\\/\\/github\\.com\\/)([^/]+\\/[^/]+)"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "{{{ matchStrings.[1] }}}",
            "versioningTemplate": "semver"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                ".*"
            ],
            "minimumReleaseAge": "12 hours"
        }
    ]
}